<%= form_with(model: burger, local: true) do |form| %>
  <% if burger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(burger.errors.count, "error") %> prohibited this burger from being saved:</h2>

      <ul>
      <% burger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :owner %>
    <%= form.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if burger.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', burger, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if burger.persisted? %>
      <%= link_to "Cancel", burger, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", burgers_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
