


<div class="row">
  <div class="col-sm-6">
    <h1>Burgers</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_burger_path, class: 'btn btn-primary' do %>
    Add New Burger
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
            <th>id</th>
            <th>Owner</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @burgers.each do |burger| %>
        <%= content_tag :tr, id: dom_id(burger), class: dom_class(burger) do %>
          
                      <td><%= burger.id %></td>
                      <td><%= burger.owner.full_name if burger.owner %></td>
          
          
            <td><%= link_to 'Show', burger %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
